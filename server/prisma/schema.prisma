datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Board {
  id          String   @id @default(uuid())
  title       String
  description String?
  type        String   @default("analysis")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  nodes       Node[]
  edges       Edge[]
}

model Node {
  id          String   @id
  type        String
  positionX   Float
  positionY   Float
  data        Json
  boardId     String
  board       Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
}

model Edge {
  id          String   @id
  source      String
  target      String
  type        String?
  data        Json?
  boardId     String
  board       Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
}
